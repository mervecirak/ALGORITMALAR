     private void Form1_Load(object sender, EventArgs e)
        {
            string[] gunler = new string[7];
            gunler[0] = "Pazartesi";
            gunler[1] = "Salı";
            gunler[2] = "Çarsamba";
            gunler[3] = "Persembe";
            gunler[4] = "Cuma";
            gunler[5] = "Cumartesi";
            gunler[6] = "Pazar";
            Random r = new Random();
            int a;
            a = r.Next(0, 6);
            MessageBox.Show(gunler[a]);
        }
